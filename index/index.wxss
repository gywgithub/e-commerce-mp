.container {
  height: calc(100vh - 1px);
  background-color: #eee;
  border-top: 1px solid #eee;
}

.card {
  display: flex;
  background-color: #fff;
  margin: 30rpx 0 20rpx 0;
  padding: 20rpx 20rpx;
}

.img {
  width: 240rpx;
  height: 240rpx;
  border-radius: 8rpx;
  object-fit: contain;
  border: 1px solid #f6f6f6;
}

.content {
  padding-left: 20rpx;
  width: calc(100% - 240rpx - 20rpx);
}

.artist-container {
  font-size: 0.8em;
  color: #999;
  margin: 8rpx 0 16rpx 0;
}

.flex-between {
  display: flex;
  justify-content: space-between;
}

.color-red {
  color: red;
}

.font-size-08 {
  font-size: 0.8em;
}

.display-flex {
  display: flex;
}

.btn-option {
  width: 48rpx !important;
  height: 48rpx !important;
  line-height: 40rpx !important;
  text-align: center;
  padding: 0;
  margin: 0 8rpx !important;
  border-radius: 4rpx !important;
}

.text-num {
  width: 80rpx;
  height: 46rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 0.8em;
  border: 1rpx solid #eee;
}

.pay-container {
  position: fixed;
  bottom: 0;
  height: 120rpx;
  left: 0;
  right: 0;
  padding: 0 20rpx;
  background-color: #fff;
}

.line-height-120 {
  line-height: 120rpx;
}

.width-200 {
  width: 200rpx;
}

.pay-btn {
  width: 100% !important;
  margin-top: 20rpx;
}